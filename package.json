{
  "name": "tribal-wall",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:wrangler": "wrangler pages dev dist --d1=DB=tribal-wall-db --compatibility-date=2024-01-01",
    "build": "vite build",
    "preview": "npm run build && npm run dev:wrangler",
    "deploy": "npm run build && wrangler pages deploy dist",
    "db:init": "wrangler d1 execute tribal-wall-db --local --file=./src/db/schema.sql",
    "db:seed": "wrangler d1 execute tribal-wall-db --local --file=./src/db/seed.sql"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@hono/vite-cloudflare-pages": "^0.4.0",
    "@hono/vite-dev-server": "^0.16.0",
    "@types/qrcode": "^1.5.5",
    "tailwindcss": "^4.0.0-beta.9",
    "@tailwindcss/vite": "^4.0.0-beta.9",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "wrangler": "^3.91.0"
  }
}
